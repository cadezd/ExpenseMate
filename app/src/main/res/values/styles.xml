    <style name="text_h5_black" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>


    <style name="text_label" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/lightText</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="text_p_light_text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/lightText</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>


    <style name="text_p_white_text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="text_p_black_text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="text_p_light_text_no_margins" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/lightText</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="text_input_layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/lightText</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>

        <item name="hintEnabled">false</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="endIconTint">@color/lightText</item>
        <item name="startIconTint">@color/lightText</item>
        <item name="hintTextColor">@color/lightText</item>
        <item name="endIconMode">clear_text</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="text_input_layout_password" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/lightText</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>

        <item name="hintEnabled">false</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="endIconTint">@color/lightText</item>
        <item name="startIconTint">@color/lightText</item>
        <item name="hintTextColor">@color/lightText</item>
        <item name="endIconMode">password_toggle</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="text_input" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textColor">@color/lightText</item>
        <item name="android:textColorHint">@color/lightText</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="button" parent="Widget.AppCompat.Button">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="combo_box_input_layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:textColorHint">@color/lightText</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:fontFamily">@font/inter_medium</item>

        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxStrokeColor">@color/lightText</item>
        <item name="endIconTint">@color/lightText</item>
        <item name="startIconTint">@color/lightText</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="paddingTopNoTitle">20dp</item>
        <item name="paddingBottomNoButtons">20dp</item>
    </style>

    <style name="combo_box_input" parent="Widget.Material3.AutoCompleteTextView.OutlinedBox">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textColor">@color/lightText</item>
        <item name="android:textColorHint">@color/lightText</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:inputType">none</item>
    </style>

    <style name="radio_button" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:background">@drawable/change_background_radio_button</item>
        <item name="android:textColor">@drawable/change_text_color_checked</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.12</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

</resources>